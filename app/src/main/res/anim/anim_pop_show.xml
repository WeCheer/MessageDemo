<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">


    <scale
        android:duration="200"
        android:fromXScale="30%"
        android:fromYScale="30%"
        android:toXScale="100%"
        android:toYScale="100%"
        android:pivotY="0%"
        android:pivotX="100%"
        android:interpolator="@anim/interpolator_show_pop_window"/>


    <scale
        android:startOffset="200"
        android:duration="200"
        android:fromXScale="105%"
        android:fromYScale="105%"
        android:toXScale="100%"
        android:toYScale="100%"
        android:pivotY="0%"
        android:pivotX="100%"
        android:interpolator="@anim/interpolator_show_pop_window"/>

    <alpha
        android:duration="200"
        android:fromAlpha="0"
        android:toAlpha="1"
        android:interpolator="@anim/interpolator_alpha_show_pop_window"/>

</set>